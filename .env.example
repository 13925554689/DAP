# DAP GitHub 自动备份配置示例
# 复制此文件为 .env 并填入实际值

# GitHub 备份配置
DAP_GITHUB_BACKUP_ENABLED=true
DAP_GITHUB_BACKUP_REPO=13925554689/DAP
DAP_GITHUB_BACKUP_BRANCH=main
DAP_GITHUB_TOKEN=your_github_token_here

# 可选配置
DAP_GITHUB_BACKUP_PATHS=data,exports,config,layer1,layer2,layer3,layer4,layer5,main_engine.py,dap_launcher.py
DAP_GITHUB_BACKUP_REMOTE_PATH=backups
DAP_GITHUB_BACKUP_TEMP_DIR=data/github_backups
DAP_GITHUB_BACKUP_INTERVAL_MINUTES=120
DAP_GITHUB_BACKUP_COMMIT_MESSAGE=自动备份 DAP 项目: {timestamp} (包含 {files} 个文件)
DAP_GITHUB_BACKUP_AUTHOR_NAME=DAP Backup Bot
DAP_GITHUB_BACKUP_AUTHOR_EMAIL=backup-bot@dap.com
DAP_GITHUB_BACKUP_RETENTION=5
DAP_GITHUB_BACKUP_VERIFY_SSL=true

# 数据库配置
DAP_DB_PATH=data/dap_data.db

# API 配置
DAP_API_HOST=127.0.0.1
DAP_API_PORT=8000

# 日志配置
DAP_LOG_LEVEL=INFO
