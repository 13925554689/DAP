# DAP v2.0 Backend Environment Variables
# Copy this file to .env and update values for your environment

# Application
APP_NAME=DAP Audit System v2.0
APP_VERSION=2.0.0
DEBUG=false
ENVIRONMENT=development

# Database
# SQLite (for development)
DATABASE_URL=sqlite:///./dap_v2.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/dap_db

# Security - IMPORTANT: Generate a secure secret key for production
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-!!!
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# CORS Origins (comma-separated)
CORS_ORIGINS=["http://localhost:5173","http://localhost:8080","http://localhost:3000"]

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@dap-audit.com
SMTP_FROM_NAME=DAP Audit System

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads
ALLOWED_UPLOAD_EXTENSIONS=[".xlsx",".xls",".csv",".pdf",".doc",".docx"]
